generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  token     String?
  treinos  Treino[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

enum Dia {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}

model Treino {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  dia       Dia
  exercicios ExerciciosEmTreino[]
}

model ExerciciosEmTreino {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  TreinoId  String   @db.ObjectId
  treino    Treino  @relation(fields: [TreinoId], references: [id])
  exercicioId String   @db.ObjectId
  exercicio   Exercicio @relation(fields: [exercicioId], references: [id])
  series     Int
  repeticoes       Int
}

model Exercicio {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  grupoMuscularId String @db.ObjectId
  grupoMuscular  GrupoMuscular @relation(fields: [grupoMuscularId], references: [id])
  ExerciciosEmTreino ExerciciosEmTreino[]
}

model GrupoMuscular {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId 
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  exercicios  Exercicio[]
}